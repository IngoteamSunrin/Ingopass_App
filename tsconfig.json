// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@assets/*": ["assets/*"],

    },
    "skipLibCheck": true,
    "types": [
      "@types/styled-components-react-native"
    ]
                                  /* Skip type checking all .d.ts files. */
  }
}
